<div class="choose">
  <!--当为购物时，显示的页面-->
  <div *ngIf="xingShi=='购物'" class="gouwude">
    <div class="choose-child clearfix" padding>
      <img src="{{product.Images}}">
      <div class="choose-right">
        <p>{{product.Title}}</p>
        <p>{{product.About}}</p>
        <div class="choose_jiage" *ngIf="price&&xuan.Num!=0">
          <i class="icon tubiao">&#xe788;</i>
          <span>{{price}}</span>
        </div>
      </div>
      <i class="icon tubiao guanbi" (tap)="close()" tappable>&#xe635;</i>
    </div>

    <div class="guige" padding>
      <div class="f16">规格</div>
      <div class="guige-choose">
        <button (tap)="xuanzhong(aa)" *ngFor="let aa of productParam" [class.back]="xuanze(aa)&&aa.Num>0" [class.numberKong]="aa.Num<=0">{{aa.Title}}</button>
      </div>
    </div>

    <div class="shuliang1" padding-left padding-right>
      <div class="f16">数量</div>
      <button (tap)="numdown()">-</button>
      <input type="number" [(ngModel)]="num" class="shuru" value="num" onblur="if(! /^d+$/.test(this.value)){this.value=Math.ceil(value)}">
      <button (tap)="numup()">+</button>
    </div>
    <button class="sure" [class.button-ios-gray]="!xuan||xuan.Num<=0" [class.button-ios-primary]="xuan&&xuan.Num>0" (tap)="close1(xuan,tiao,this.UID)">确定</button>
  </div>
  <!--当为分享时，显示的页面-->
  <div *ngIf="xingShi=='分享'" class="fenxiang">
    <div>分享到</div>
    <div>
      <div><i class="icon tubiao ">&#xe62d;</i>
        <p>朋友圈</p>
      </div>
      <div><i class="icon tubiao ">&#xe602;</i>
        <p>微信</p>
      </div>
      <div><i class="icon tubiao ">&#xe619;</i>
        <p>新浪微博</p>
      </div>
    </div>
    <div>
      <div><i class="icon tubiao ">&#xe64a;</i>
        <p>QQ</p>
      </div>
      <div><i class="icon tubiao ">&#xe636;</i>
        <p>QQ空间</p>
      </div>
      <span></span>
    </div>
    <div (click)="close()">取消</div>
  </div>
</div>
