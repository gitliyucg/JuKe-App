.yixuan-list{
    background:white;
    margin-top:15px;
    overflow: hidden;
    display:flex;
    align-items: center;
    justify-content: space-between;
}
//左边的点
.dian{
    display:inline-block;
    padding:6px;
    width:20px;
    height:20px;
    background-clip:content-box;
    border: 1px solid black;
    border-radius: 50%;
}
//图片
.yixuan-list img{
   width:35%;

}
//右边描述
.yixuan-right{
   width:40%;

}
.yixuan-right p:nth-child(1){
    font-size:1.5rem;
    margin:0;
  height: 2.8em;
  overflow: hidden;

}
.yixuan-right p:nth-child(2){
    font-size:1.4rem;
    margin:5px 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #666;

}
.jiage{

    color:#fd4c06;
}

.jiage span{
    font-size:1.6rem;
  float: left;
}
.jiage i{
    font-size:1.6rem;
  float: left;
}
//增加数量
.number{
    width:30px;
    display:flex;
    flex-wrap: wrap;
    align-content: space-between;

}
.number span{
    display:block;
    width:30px;
    height:30px;
    text-align:center;
    border-radius: 5px;
    line-height:30px;
  font-size:1.6rem;

}
.number button{
    background:#eee;
    font-size:2rem;
  display:block;
  width:30px;
  height:30px;
  text-align:center;
  border-radius: 5px;
  line-height:30px;
  overflow: hidden;
  padding: 0;
  margin: 0;
}

// 设置库存不足提示
.gwc_list{
    position:relative;
}
.tishi{
    font-size:1.6rem!important;
    color:black;
    text-align: center;
    font-size:1.8rem;
    font-weight:bold;
    position:absolute;
    z-index:100000;
    top:0;
    left: 0;
    width:100%;
    height:100%;
}
.tishi_content{
   background:rgba(232,230,229,0.92);
   margin:11% 20%;
   padding:10px 0;
   border-radius:8px;
   position:relative;
}
.tishi_content span:nth-child(1){
    margin:0;
    padding:5px;
}
.closed{
    position:absolute;
    right:-5px;
    top:-5px;
    background:#1b0666;
    color:white;
    border-radius:50%;
    line-height:100%;
}
.bianbian{ // 控制“+”号变色
    color:gray!important;
}
.moreNumber{ // 控制购买数量上百时的文字显示
    font-size:1.4rem!important;
}


